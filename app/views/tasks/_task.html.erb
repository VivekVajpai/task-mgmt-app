<div id="task_<%= task.id %>" class="border p-4 mb-2 rounded bg-gray-100">
  <h3 class="text-lg font-bold"><%= task.title %></h3>
  <p class="text-gray-600"><%= task.description %></p>
  <p class="text-sm text-gray-500">Status: <%= task.status %></p>

  <!-- Edit and Delete Buttons -->
  <div class="mt-2">
    <%= link_to "Edit", edit_project_task_path(task.project, task), class: "text-blue-500" %> |
    <%= link_to "Delete", project_task_path(task.project, task), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-500" %>
  </div>
</div>
