<div class="p-4 bg-white shadow rounded-lg my-2">
  <h2 class="text-xl font-semibold"><%= project.name %></h2>
  <p class="text-gray-600"><%= project.description %></p>
  
  <div class="mt-2">
    <%= link_to "View", project_path(project), class: "text-blue-500" %> |
    <%= link_to "Edit", edit_project_path(project), class: "text-yellow-500" %> |
    <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500" %>
  </div>
</div>
