<%= form_with model: @project do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, class: "border p-2 w-full" %>
  </div>

  <div class="mt-2">
    <%= f.label :description %>
    <%= f.text_area :description, class: "border p-2 w-full" %>
  </div>

  <div class="mt-4">
    <%= f.submit class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
